# Redirecciones para prevenir contenido duplicado
# Asegurar que todas las variaciones de home redirijan a /

# Redireccionar /home a /
RewriteEngine On
RewriteRule ^home/?$ / [R=301,L]

# Redireccionar /index.html a /
RewriteRule ^index\.html?$ / [R=301,L]

# Redireccionar /index a /
RewriteRule ^index/?$ / [R=301,L]

# Forzar www (o sin www, elige una)
# Si quieres forzar www, descomenta estas líneas:
# RewriteCond %{HTTP_HOST} ^kendraphotography\.com [NC]
# RewriteRule ^(.*)$ https://www.kendraphotography.com/$1 [R=301,L]

# Si quieres forzar SIN www, descomenta estas líneas:
RewriteCond %{HTTP_HOST} ^www\.kendraphotography\.com [NC]
RewriteRule ^(.*)$ https://kendraphotography.com/$1 [R=301,L]

# Forzar HTTPS
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [R=301,L]

# Remover trailing slashes excepto para root
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)/$ /$1 [R=301,L]

# ===========================================
# CONTENT SECURITY POLICY - HEADERS HTTP
# ===========================================

# Content Security Policy (CSP) - Prevenir XSS
Header always set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://cdn.emailjs.com https://unpkg.com https://cdnjs.cloudflare.com https://www.googletagmanager.com https://www.google-analytics.com https://vercel.live; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com https://cdnjs.cloudflare.com; font-src 'self' https://fonts.gstatic.com https://cdnjs.cloudflare.com data:; img-src 'self' data: https: blob:; media-src 'self' https:; connect-src 'self' https://api.emailjs.com https://www.google-analytics.com https://vitals.vercel-analytics.com https://vercel.live wss://vercel.live; frame-src 'none'; object-src 'none'; base-uri 'self'; form-action 'self' https://api.emailjs.com; worker-src 'self' blob:; manifest-src 'self'; upgrade-insecure-requests; block-all-mixed-content"

# Headers de Seguridad Adicionales
Header always set X-Content-Type-Options "nosniff"
Header always set X-Frame-Options "DENY"  
Header always set X-XSS-Protection "1; mode=block"
Header always set Referrer-Policy "strict-origin-when-cross-origin"
Header always set Permissions-Policy "camera=(), microphone=(), geolocation=()"

# Strict Transport Security (HSTS)
Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"

# ===========================================
# PROTECCIÓN ADICIONAL
# ===========================================

# Bloquear acceso a archivos sensibles
<FilesMatch "\.(env|log|config|ini)$">
    Require all denied
</FilesMatch>

# Prevenir hotlinking de imágenes
RewriteCond %{HTTP_REFERER} !^$
RewriteCond %{HTTP_REFERER} !^https?://(www\.)?kendraphotography\.com [NC]
RewriteCond %{HTTP_REFERER} !^https?://(www\.)?google\. [NC]
RewriteCond %{HTTP_REFERER} !^https?://(www\.)?bing\. [NC]
RewriteRule \.(jpg|jpeg|png|gif|webp)$ - [F,L]